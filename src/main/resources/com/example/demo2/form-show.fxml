                        <Label text="Phone Number:" GridPane.columnIndex="0" GridPane.rowIndex="4" />
                        <TextField fx:id="phoneField" GridPane.columnIndex="1" GridPane.rowIndex="4" />

                        <Label text="Photo:" GridPane.columnIndex="0" GridPane.rowIndex="5" />
                        <VBox spacing="5" GridPane.columnIndex="1" GridPane.rowIndex="5">
                            <children>
                                <ImageView fx:id="photoView" fitHeight="69" fitWidth="115" preserveRatio="true" />
                                <Button fx:id="chooseImageButton" onAction="#onChooseImage" prefHeight="26" prefWidth="171" text="Choose Image" />
                            </children>
                        </VBox>

                        <Label text="Address:" GridPane.columnIndex="0" GridPane.rowIndex="6" />
                        <VBox spacing="10" GridPane.columnIndex="1" GridPane.rowIndex="6">
                            <children>
                                <TitledPane expanded="true" text="Address Details">
                                    <content>
                                        <GridPane hgap="10" vgap="5">
                                            <columnConstraints>
                                                <ColumnConstraints percentWidth="25" />
                                                <ColumnConstraints percentWidth="25" />
                                                <ColumnConstraints percentWidth="25" />
                                                <ColumnConstraints percentWidth="25" />
                                            </columnConstraints>

                                            <children>
                                                <Label text="Area:" GridPane.columnIndex="0" GridPane.rowIndex="0" />
                                                <TextField fx:id="areaField" GridPane.columnIndex="1" GridPane.rowIndex="0" />

                                                <Label text="Upazilla:" GridPane.columnIndex="2" GridPane.rowIndex="0" />
                                                <TextField fx:id="upazillaField" GridPane.columnIndex="3" GridPane.rowIndex="0" />

                                                <Label text="District:" GridPane.columnIndex="0" GridPane.rowIndex="1" />
