                                                <Label text="Division:" GridPane.columnIndex="2" GridPane.rowIndex="1" />
                                                <TextField fx:id="divisionField" GridPane.columnIndex="3" GridPane.rowIndex="1" />
                                            </children>

                                            <rowConstraints>
                                                <RowConstraints />
                                                <RowConstraints />
                                            </rowConstraints>

                                        </GridPane>
                                    </content>
                                </TitledPane>
                            </children>
                        </VBox>

