        <ScrollPane prefHeight="200.0" prefWidth="200.0" BorderPane.alignment="CENTER">
            <content>
                <GridPane alignment="CENTER" hgap="10" vgap="12">
                    <padding>
                        <Insets bottom="20" left="20" right="20" top="20" />
                    </padding>

                    <columnConstraints>
                        <ColumnConstraints percentWidth="30.0" />
                        <ColumnConstraints percentWidth="70.0" />
                    </columnConstraints>

                    <children>

                        <Label text="Full Name:" GridPane.columnIndex="0" GridPane.rowIndex="0" />
                        <TextField fx:id="fullNameField" GridPane.columnIndex="1" GridPane.rowIndex="0" />

                        <Label text="Father's Name:" GridPane.columnIndex="0" GridPane.rowIndex="1" />
                        <TextField fx:id="fatherNameField" GridPane.columnIndex="1" GridPane.rowIndex="1" />

