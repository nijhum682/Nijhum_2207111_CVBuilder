<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<GridPane xmlns="http://javafx.com/javafx/17"
          xmlns:fx="http://javafx.com/fxml/1"
          fx:controller="com.example.demo2.CvController"
          hgap="20" vgap="15">

    <columnConstraints>
        <ColumnConstraints minWidth="250"/>
        <ColumnConstraints minWidth="350"/>
    </columnConstraints>

    <Label text="CV" style="-fx-font-size:32px; -fx-font-weight:bold;"
           GridPane.rowIndex="0" GridPane.columnSpan="2"/>

    <VBox spacing="12" GridPane.rowIndex="1">
        <Label text="Personal data" style="-fx-font-size:20px; -fx-font-weight:bold;"/>
        <VBox spacing="6">
            <HBox spacing="8">
                <Label text="Full Name:"/>
                <Label fx:id="fullNameLabel"/>
            </HBox>
            <HBox spacing="8">
                <Label text="Father's Name:"/>
                <Label fx:id="fatherNameLabel"/>
            </HBox>
            <HBox spacing="8">
                <Label text="Mother's Name:"/>
                <Label fx:id="motherNameLabel"/>
            </HBox>
            <HBox spacing="8">
                <Label text="Email:"/>
                <Label fx:id="emailLabel"/>
            </HBox>
            <HBox spacing="8">
                <Label text="Phone:"/>
                <Label fx:id="phoneLabel"/>
            </HBox>
            <HBox spacing="8">
                <Label text="Address:"/>
                <Label fx:id="addressLabel" wrapText="true"/>
            </HBox>
        </VBox>
    </VBox>

    <VBox GridPane.rowIndex="1" GridPane.columnIndex="1" alignment="TOP_RIGHT">
        <ImageView fx:id="photoView" fitWidth="160" fitHeight="160" preserveRatio="true"/>
    </VBox>

    <VBox spacing="12" GridPane.rowIndex="2" GridPane.columnSpan="2">
        <Label text="Education" style="-fx-font-size:20px; -fx-font-weight:bold;"/>
        <VBox spacing="6">
            <Label fx:id="jscLabel"/>
            <Label fx:id="sscLabel"/>
            <Label fx:id="hscLabel"/>
        </VBox>
    </VBox>

    <VBox spacing="12" GridPane.rowIndex="3" GridPane.columnSpan="2">
        <Label text="Skills &amp; Experience" style="-fx-font-size:20px; -fx-font-weight:bold;"/>
        <VBox spacing="6">
            <Label text="Skills:"/>
            <Label fx:id="skillsLabel" wrapText="true"/>

            <Label text="Experience:"/>
            <Label fx:id="experienceLabel" wrapText="true"/>

            <Label text="Projects:"/>
            <Label fx:id="projectsLabel" wrapText="true"/>
        </VBox>
    </VBox>

</GridPane>
