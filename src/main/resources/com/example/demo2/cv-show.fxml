<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.RowConstraints?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<BorderPane prefHeight="778.0" prefWidth="606.0" style="-fx-padding: 20;" xmlns="http://javafx.com/javafx/25" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.demo2.CvController">
    <top>
        <VBox spacing="10">
            <HBox alignment="CENTER_RIGHT" prefHeight="115.0" prefWidth="557.0" spacing="20">
                <padding>
                    <Insets bottom="20" left="10" right="10" top="10" />
                </padding>
               <Label alignment="CENTER" contentDisplay="TOP" style="-fx-font-size: 28px; -fx-font-weight: bold; -fx-underline: true;" text="Curriculum Vitae">
               <font>
                  <Font name="Bodoni MT Black Italic" size="14.0" />
               </font></Label>
                <VBox spacing="5">
                    <Label fx:id="fullNameLabel" style="-fx-font-size: 24px; -fx-font-weight: bold;" />
                    <Label fx:id="emailLabel" style="-fx-font-size: 14px;" />
                    <Label fx:id="phoneLabel" style="-fx-font-size: 14px;" />
                </VBox>
                <ImageView fx:id="photoView" fitHeight="120" fitWidth="120" nodeOrientation="RIGHT_TO_LEFT" preserveRatio="true" />
            </HBox>
        </VBox>
    </top>
    <center>
        <VBox prefHeight="478.0" prefWidth="602.0" spacing="15">
            <GridPane hgap="10" vgap="5">
                <columnConstraints>
                    <ColumnConstraints percentWidth="25" />
                    <ColumnConstraints percentWidth="75" />
                </columnConstraints>
                <Label prefHeight="26.0" prefWidth="158.0" text="Father's Name:" GridPane.columnIndex="0" GridPane.rowIndex="0">
               <font>
                  <Font name="System Bold" size="17.0" />
               </font></Label>
                <Label fx:id="fatherNameLabel" GridPane.columnIndex="1" GridPane.rowIndex="0" />
                <Label text="Mother's Name:" GridPane.columnIndex="0" GridPane.rowIndex="1">
               <font>
                  <Font name="System Bold" size="17.0" />
               </font></Label>
                <Label fx:id="motherNameLabel" GridPane.columnIndex="1" GridPane.rowIndex="1" />
                <Label text="Address:" GridPane.columnIndex="0" GridPane.rowIndex="2">
               <font>
                  <Font name="System Bold" size="17.0" />
               </font></Label>
                <Label fx:id="addressLabel" GridPane.columnIndex="1" GridPane.rowIndex="2" />
                <rowConstraints>
                    <RowConstraints />
                    <RowConstraints />
                    <RowConstraints />
                </rowConstraints>
            </GridPane>
            <VBox spacing="10">
                <Label style="-fx-font-size: 18px; -fx-font-weight: bold;" text="Education:" />
                <VBox spacing="5">
                    <Label fx:id="jscLabel" />
                    <Label fx:id="sscLabel" />
                    <Label fx:id="hscLabel" />
                </VBox>
            </VBox>
            <VBox spacing="5">
                <Label style="-fx-font-size: 18px; -fx-font-weight: bold;" text="Skills:" />
                <Label fx:id="skillsLabel" wrapText="true" />
            </VBox>
            <VBox spacing="5">
                <Label style="-fx-font-size: 18px; -fx-font-weight: bold;" text="Work Experience:" />
                <Label fx:id="experienceLabel" wrapText="true" />
            </VBox>
            <VBox spacing="5">
                <Label style="-fx-font-size: 18px; -fx-font-weight: bold;" text="Projects:" />
                <Label fx:id="projectsLabel" wrapText="true" />
            </VBox>
        </VBox>
    </center>
</BorderPane>
